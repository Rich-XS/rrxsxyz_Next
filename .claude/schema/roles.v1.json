{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RoleCard",
  "type": "object",
  "required": ["id","name","type","summary","ui","priority"],
  "properties": {
    "id": { "type": "string", "pattern": "^role-\\d{2}$" },
    "name": { "type": "string", "minLength": 1, "maxLength": 60 },
    "type": { "type": "string", "enum": ["core","external","value","neutral"] },
    "summary": { "type": "string", "maxLength": 200 },
    "goals": { "type": "array", "items": { "type":"string" }, "maxItems": 5 },
    "constraints": { "type": "array", "items": { "type":"string" } },
    "persona": { "type": "string" },
    "abilities": { "type": "array", "items": { "type":"string" } },
    "actions": { "type": "array", "items": { "type":"string" } },
    "resources": { "type": "object", "properties": { "tokens": { "type":"integer", "minimum":0 } } },
    "example_prompt": { "type": "string" },
    "ui": {
      "type": "object",
      "required": ["thumb","colorTag","size"],
      "properties": {
        "thumb": { "type":"string" },
        "colorTag": { "type":"string", "pattern":"^#([A-Fa-f0-9]{6})$" },
        "size": { "type":"string", "pattern":"^\\d+x\\d+$" }
      }
    },
    "priority": { "type": "integer", "minimum":1, "maximum":5 },
    "notes": { "type": "string" }
  }
}
