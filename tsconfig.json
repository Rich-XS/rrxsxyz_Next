{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": false,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    ".claude/**/*.js",
    "duomotai/**/*.js",
    "html/**/*.js",
    "modules/**/*.js",
    "scripts/**/*.js",
    "server/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".venv",
    "**/*.test.js"
  ]
}